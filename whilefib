import time
import matplotlib.pyplot as plt
import numpy as np

def whilefib(n):  #function fibonacci sequence using while loop
                  #input: n, non-negative integer
                  #output: list of n + 1 fib. numbers (n nontrivial fib. numbers)
    if isinstance(n, int) == 1 and n >= 0:      #checks n is non-negative integer
        if n == 0:                              #trivial case
            whilefib = [0]                        
            return whilefib
        elif n == 1:                            #trivial case
            whilefib = [0, 1]
            return whilefib
        else:                                   #non-trivial n >= 2
            whilefib = [0, 1] + [0] * (n - 1)   #initialize list w/ first two fib. numbers concatenated w/ n - 1 zeros
            i = 0                               #intialize counter
            while i < n - 1:                    #while i is less than n - 1
                whilefib[i + 2] = whilefib[i + 1] + whilefib[i]         #next fib. number is sum of prev two
                i = i + 1                       #add to counter
            return whilefib     
    else:                                       #executes if n is not valid
        print("n must be a non-negative integer")
      
def timer_while_fib(n)
              # function to calculate time to produce a list of n + 1 fib. numbers
              # input: natural number
              # output 1: list of fibonacci numbers
              # output 2: time spent running 
  start = time.time()
  forfib(n)
  end = time.time()
  elapse = end - start
  return forfib(n)
